    <script>
        function openDashboard() { window.location.href = "ads_dashboard.html"; }
        function openProfile() { window.location.href = "ads_studentprofile.html"; }
        function openGrades() { window.location.href = "ads_viewgrades.html"; }
        function openEnrollment() { window.location.href = "ads_enrollment.html"; }
        function openPlmWeb() { location.href = "https://plm.edu.ph/studentinfosys"; }

        function openSignoutPopup() { document.getElementById("signoutPopup").style.display = "flex"; }
        function closePopup() { document.getElementById("signoutPopup").style.display = "none"; }

        function confirmSignout() {
            document.getElementById("signoutPopup").style.display = "none";
            document.getElementById("enrollmentContent").style.display = "none";
            document.getElementById("loginCard").style.display = "block";
        }

        function login() {
            document.getElementById("loginCard").style.display = "none";
            document.getElementById("enrollmentContent").style.display = "block";
            alert("Logged in!"); 
        }
    </script>

